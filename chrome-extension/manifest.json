{
  "manifest_version": 3,
  "name": "SapienWrite - AI Text Humanizer",
  "version": "1.0.7",
  "description": "Humanize AI-generated text anywhere on the web. Requires SapienWrite subscription.",
  "permissions": ["storage", "activeTab", "contextMenus", "webNavigation", "notifications", "scripting", "clipboardWrite", "alarms"],
  "host_permissions": ["https://nycrxoppbsakpkkeiqzb.supabase.co/*", "https://sapienwrite.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": [
        "https://sapienwrite.com/*",
        "https://*.sapienwrite.com/*",
        "https://*.lovableproject.com/*",
        "http://localhost:5173/*"
      ],
      "js": ["auth-bridge.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
